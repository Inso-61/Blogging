{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Mes informations</div>
        <div class="panel-body">
            <p><strong>{{ 'profile.show.username'|trans }} :</strong> {{ user.username }}</p>
            <p><strong>{{ 'profile.show.email'|trans }} :</strong> {{ user.email }}</p>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Modifier mon profil</div>
        <div class="panel-body">
            <p><a href="{{ path('fos_user_change_password') }}">Changer mon mot de passe</a></p>
            <p><a href="{{ path('fos_user_profile_edit') }}">Editer mon profil</a></p>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}<div class="panel panel-default">
        <div class="panel-heading">Administration</div>
        <div class="panel-body">
            <a href="{{ path('admin') }}">Voir le dashboard admin</a>
        </div>
        </div>{% endif %}


</div>
