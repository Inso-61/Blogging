{% extends '::base.html.twig' %}
{% block navbar %}
    <div class="blog-masthead">
        <div class="container">
            <nav class="blog-nav">
                <a href="{{ path('homepage') }}" class="blog-nav-item">Accueil</a>
                <div class="right-nav">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {% if is_granted('ROLE_ADMIN') %}<a class="blog-nav-item active" href="{{ path('admin') }}">Admin</a>{% endif %}

                        <a class="blog-nav-item" href="{{ path('fos_user_profile_show') }}">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a>
                        <a class="blog-nav-item" href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        <a class="blog-nav-item active" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                        <a class="blog-nav-item" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </div>
            </nav>

        </div>
    </div>
{% endblock %}
{% block body -%}
    {% if is_granted('ROLE_ADMIN') %}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des commentaires</h3>
        </div>
        <div class="panel-body">

            <table class="table table-hover table-bordered records_list">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Objet</th>
                        <th>Commentaire</th>
                        <th>Sur l'article</th>
                        <th>L'utilisateur</th>
                        <th>Date du post</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('comments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.objet }}</td>
                        <td>{{ entity.commentaire }}</td>
                        <td>{{ entity.article }}</td>
                        <td>{{ entity.user }}</td>
                        <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <table border="0" cellpadding="2" cellspacing="0">
                                <tr>
                                    <td><a class="btn btn-default" href="{{ path('comments_show', { 'id': entity.id }) }}">Afficher</a></td>
                                    <td><a class="btn btn-default" href="{{ path('comments_edit', { 'id': entity.id }) }}">Modifier</a></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <table border="0" cellpadding="2" cellspacing="0">
                <tr>
                    <td><a class="btn btn-success" href="{{ path('comments_new') }}">Ajouter un nouveau commentaire</a></td>
                    <td><a class="btn btn-primary" href="{{ path('admin') }}">Retour à l'admin</a></td>
                </tr>
            </table>

       </div>
    </div>
</div>
    {% else %}
        <div class="container">
            <div class="alert alert-danger"><strong>Accès interdit !</strong> Vous n'avez pas les autorisations nécessaires !</div>
        </div>
    {% endif %}
    {% endblock %}
